echo "🔍 Running ESLint before commit..."
npm run lint

if [ $? -ne 0 ]; then
  echo "❌ ESLint failed. Commit aborted."
  exit 1
fi

# echo "🧼 Auto-fixing code with ESLint..."
# npx eslint . --fix

echo "🧼 Running Prettier before commit..."
npx prettier --check .

echo "✅ Lint passed. Proceeding with commit."